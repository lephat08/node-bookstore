<%- contentFor('title') %>
Cập nhật
<%- contentFor('body') %>
<h4 style="margin-bottom: 20px;">Cập nhật thông tin Sách</h4>

<form action="/editbook/<%= model._book_id %>" method="post">
  <div class="form-horizontal">

    <%- include("_book_editor") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Update" class="btn btn-default btn-warning" />
        <a class="btn btn-outline-dark cancel" href="/book">Cancel</a>
      </div>
    </div>
  </div>
</form>