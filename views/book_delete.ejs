<h1>Xóa Sách</h1>

<form action="/deletebook/<%= model._book_id %>" method="post">
  <div class="form-horizontal">

    <%- include("_book_display") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Xóa" onclick="return confirm('Bạn có muốn xóa thật chứ ?!');" class="btn btn-default btn-danger" />
        <a class="btn btn-outline-dark cancel" href="/book">Hủy</a>
      </div>
    </div>
  </div>
</form>

