<div class="form-group row">
    <label class="col-form-label col-sm-2" for="ten">Tựa sách</label>
    <div class="col-sm-8">
      <input autofocus class="form-control" cols="10" name="ten" value="<%= model._book_title %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="noidung">Nội dung</label>
    <div class="col-sm-8">
      <textarea class="form-control" cols="10" name="noidung" maxlength="3200" rows="2"><%= model._book_content %></textarea>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="city">Hình ảnh</label>
    <div class="col-sm-8">
      <input autofocus class="form-control" cols="10" name="samplefile" value="<%= model._book_image %>" />
        <!-- <input autofocus class="form-control"  name="samplefile" type="file"  /> -->
    </div>
  </div>

  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="price">Gía</label>
    <div class="col-sm-8">
      <input autofocus class="form-control" cols="10" name="price" value="<%= model._book_price %>" />
    </div>
  </div>

