<%- contentFor('title') %>
Info
<%- contentFor('body') %>
<h1>Danh sách tác giả (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr class="bg-primary text-center">
        <th>Họ và Tên</th>
        <th>Email</th>
        <th>City</th>
        <th>Quốc gia</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/create">Thêm</a>
        </th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% for (const data of model) { %>
        <tr>
          <td><%= data.name %></td>
          <td><%= data.email %></td>
          <td><%= data.city %></td>
          <td><%= data.country %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" style="color: black;" href="/edit/<%= data.id %>">Sửa</a>
            <a class="btn btn-sm btn-danger" href="/delete/<%= data.id %>">Xóa</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>